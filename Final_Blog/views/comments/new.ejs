<div class="ui main text container segment">
    <div class="ui huge header">Add New Comment to <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id%>/comments" method="post">
        <div class="field">
            <input type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="field">
            <input type="text" name="comment[author]" placeholder="author">
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
    <a href="/blogs">Go Back</a>
</div>

